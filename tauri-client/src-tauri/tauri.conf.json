{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ChatTalkie",
  "version": "0.1.0",
  "identifier": "com.chattalkie.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ChatTalkie",
        "width": 450,
        "height": 650,
        "minWidth": 400,
        "minHeight": 600,
        "maxWidth": 1200,
        "maxHeight": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "hiddenTitle": false,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}